@page
@model KonisCurriculimVitae.Pages.Shared.ExperienceModel
@{
    ViewData["Title"] = "Experience";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background-color: #0d0d0d;
            color: #222;
        }

        .page {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
            gap: 2rem;
            padding: 4vh 5vw;
        }

        .text-section {
            flex: 1 1 400px;
            max-width: 600px;
        }

            .text-section h1 {
                font-size: 2.2rem;
                font-weight: bold;
                margin-bottom: 0.3rem;
            }

            .text-section h2 {
                font-size: 1.8rem;
                margin-bottom: 1.2rem;
            }

            .text-section p {
                font-size: 1rem;
                line-height: 1.6;
                margin-bottom: 1rem;
            }

        .image-section {
            flex: 1 1 400px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .image-section img {
                width: 90%;
                max-width: 500px;
                height: auto;
            }
    </style>
</head>
<body>
    <div class="page">
        <div class="text-section">
            <h1><strong>EXPERIENCE &</strong></h1>
            <h2>SKILLS</h2>

            <p>
                <strong>HP Tech Ventures (Extern):</strong><br />
                Role: Business Analyst Intern<br />
                Duration: August 2024 – September 2024<br />
                Key Skills Gained: Market research, data analytics, deal evaluation, and communication skills.
            </p>

            <p>
                <strong>Webacy (Extern):</strong><br />
                Role: Data Analyst Intern<br />
                Duration: August 2024 – September 2024<br />
                Key Skills Gained: Smart contract analysis, data validation techniques, risk assessment, and collaboration.
            </p>

            <p>
                <strong>Skills</strong><br />
                <strong>Technical Skills:</strong> Java, C#, ASP.NET, SQL, data analytics, smart contracts.<br />
                <strong>Soft Skills:</strong> Strong communication, collaboration, problem-solving, and stakeholder engagement.
            </p>
        </div>

        <div class="image-section">
            <img src="@Url.Content("~/images/laptop2-removebg-preview.png")" alt="Computer Illustration" />
        </div>
    </div>
</body>
</html>
