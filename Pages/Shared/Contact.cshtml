@page
@model KonisCurriculimVitae.Pages.Shared.ContactModel
@{
    ViewData["Title"] = "Contact";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;700&display=swap" rel="stylesheet">

    <style>
        body {
            background-image: url('@Url.Content("~/images/Pink and Purple Illustrative Computer Technology Presentation.png")');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
        }

        .page main {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px 40px;
        }

        .text-section {
            max-width: 40%;
        }

            .text-section h1 {
                font-size: 80px;
                font-weight: 800;
                margin: 0;
            }

            .text-section h2 {
                font-size: 40px;
                font-weight: 300;
                margin: 10px 0 20px;
            }

        .contact-info {
            margin-top: 20px;
        }

        .contact-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .contact-item i {
                font-size: 20px;
                color: #222;
                background: #fff;
                border-radius: 50%;
                padding: 8px;
                margin-right: 12px;
                width: 36px;
                height: 36px;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .contact-item span {
                font-size: 16px;
                color: #222;
            }

        .image-section img {
            max-width: 1100px;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="page">
        <main>
            <div class="text-section">
                <h1><strong>KEEP IN</strong></h1>
                <h2>CONTACT WITH ME</h2>
                <div class="contact-info">
                    <div class="contact-item">
                        <i class="fas fa-phone-alt"></i>
                        <span>+2772–478–8369</span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-globe"></i>
                        <span>https://www.linkedin.com/in/konanani-ramabulana-475215213/m</span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <span>konibulana@gmail.com</span>
                    </div>
                </div>
            </div>

            <div class="image-section">
                <img src="@Url.Content("~/images/smiley-removebg-preview.png")" alt="Flower Illustration" />
            </div>
        </main>
    </div>
</body>
</html>
