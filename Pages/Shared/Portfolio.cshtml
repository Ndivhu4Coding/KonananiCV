@page
@model KonisCurriculimVitae.Pages.Shared.PortfolioModel
@{
    ViewData["Title"] = "Portfolio";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/css/styles.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;700&display=swap" rel="stylesheet">

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background-image: url('@Url.Content("~/images/Pink and Purple Illustrative Computer Technology Presentation.png")');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            color: #222;
        }

        .portfolio-container {
            padding: 5vh 5vw;
            text-align: center;
        }

            .portfolio-container h1 {
                font-size: 2.5rem;
                margin-bottom: 2rem;
                font-weight: 700;
            }

        .video-wrapper {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            align-items: center;
            justify-content: center;
        }

        video {
            width: 90%;
            max-width: 800px;
            border-radius: 1rem;
        }
    </style>
</head>
<body>
    <div class="portfolio-container">
        <h1>My Work</h1>

        <div class="video-wrapper">
            <video controls>
                <source src="/images/khumalocraft.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>

            <video controls>
                <source src="/images/Screen Recording 2025-04-07 152856.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
</body>
</html>
